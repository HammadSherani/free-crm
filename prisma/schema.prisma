
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int       @id @default(autoincrement())
  name               String
  email              String    @unique
  age                Int?
  isProfileCompleted Boolean   @default(false)
  createdAt          DateTime  @default(now())
  isActive           Boolean   @default(true)
}
